<html>
<head>
    <title>Future Imperfect by HTML5 UP</title>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1"/>

    {% include 'includes/styles' with {"page": page} %}
</head>
<body class="{% block bodyClass %}{% endblock %}">

<!-- Wrapper -->
<div id="wrapper">

    <!-- Header -->
    <header id="header">
        <h1><a href="{{ site.baseUrl }}">{{ theme.about.siteName }}</a></h1>
        <nav class="links">
            <ul>
                {% for menuItem in theme.topMenu.menuItems %}
                    <li><a href="{{ menuItem.link }}">{{menuItem.title}}</a></li>
                {% endfor %}
            </ul>
        </nav>
        <nav class="main">
            <ul>
                <li class="search">
                    <a class="fa-search" href="#search">Search</a>
                    <form id="search" method="get" action="#">
                        <input type="text" name="query" placeholder="Search"/>
                    </form>
                </li>
                <li class="menu">
                    <a class="fa-bars" href="#menu">Menu</a>
                </li>
            </ul>
        </nav>
    </header>

    <!-- Menu -->
    <section id="menu">

        <!-- Search -->
        <section>
            <form class="search" method="get" action="#">
                <input type="text" name="query" placeholder="Search"/>
            </form>
        </section>

        <!-- Links -->
        <section>
            <ul class="links">
                {% for menuItem in theme.drawerMenu.menuItems %}
                    <li>
                        <a href="{{ menuItem.link }}">
                            <h3>{{menuItem.title}}</h3>
                            <p>{{menuItem.subtitle}}</p>
                        </a>
                    </li>
                {% endfor %}
            </ul>
        </section>

        <!-- Actions -->
        <section>
            <ul class="actions vertical">
                <li><a href="#" class="button big fit">Log In</a></li>
            </ul>
        </section>

    </section>

    {% block body %}{% endblock %}

</div>

{% include 'includes/scripts' with {"page": page} %}
</body>
</html>